{
  "name": "hypertoken-monorepo",
  "version": "0.1.3",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "hypertoken": "./dist/cli/index.js"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pako": "^2.0.4",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@automerge/automerge": "^3.2.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@msgpack/msgpack": "^3.1.3",
    "@types/ws": "^8.18.1",
    "pako": "^2.1.0",
    "ws": "^8.18.3"
  },
  "scripts": {
    "help": "node cli/help.js",
    "build": "tsc && npm run build:examples",
    "build:examples": "cp -r examples/blackjack/*.js dist/examples/blackjack/ && cp -r examples/blackjack/token-sets dist/examples/blackjack/ && mkdir -p dist/core-rs && cp -r core-rs/pkg dist/core-rs/ && cp examples/cuttle/*.js dist/examples/cuttle/ && cp -r examples/cuttle/web dist/examples/cuttle/",
    "clean": "rm -rf dist && echo 'âœ“ Build artifacts cleaned'",
    "blackjack": "node dist/examples/blackjack/cli.js --betting",
    "blackjack:server": "npx tsx examples/blackjack/server.js",
    "blackjack:client": "npx tsx examples/blackjack/client.js",
    "poker": "npx tsx examples/poker/play.ts",
    "cuttle": "npx tsx examples/cuttle/cli.js",
    "cuttle:server": "npx tsx examples/cuttle/server.js",
    "cuttle:client": "npx tsx examples/cuttle/network-client.js",
    "prisoners-dilemma": "npx tsx examples/prisoners-dilemma/pd-cli.js",
    "pd:tournament": "npx tsx examples/prisoners-dilemma/tournament.js",
    "dungeon:server": "npx tsx examples/dungeon-raiders/server.js",
    "dungeon:client": "npx tsx examples/dungeon-raiders/client.js",
    "cli": "npx tsx cli/index.ts",
    "relay": "npx tsx cli/index.ts relay",
    "bridge": "npx tsx cli/index.ts bridge",
    "mcp": "npx tsx cli/index.ts mcp",
    "test:core": "node --loader ./test/ts-esm-loader.js test/testCore.js",
    "test:engine": "node --loader ./test/ts-esm-loader.js test/testEngine.js",
    "test:exporters": "node --loader ./test/ts-esm-loader.js test/testExporters.js",
    "test:token": "node --loader ./test/ts-esm-loader.js test/testTokenActions.js",
    "test:batch": "node --loader ./test/ts-esm-loader.js test/testBatchActions.js",
    "test:player-transfers": "node --loader ./test/ts-esm-loader.js test/testPlayerTransfers.js",
    "test:recorder": "node --loader ./test/ts-esm-loader.js test/testRecorder.ts",
    "test:script": "node --loader ./test/ts-esm-loader.js test/testScript.ts",
    "test:agent": "node --loader ./test/ts-esm-loader.js test/testAgent.ts",
    "test:policy": "node --loader ./test/ts-esm-loader.js test/testPolicy.ts",
    "test:source-advanced": "node --loader ./test/ts-esm-loader.js test/testSourceAdvanced.ts",
    "test:crypto": "node --loader ./test/ts-esm-loader.js test/testCrypto.ts",
    "test:random": "node --loader ./test/ts-esm-loader.js test/testRandom.ts",
    "test:plugins": "node testPlugins.js",
    "test:plugin-loader": "node --loader ./test/ts-esm-loader.js test/testPluginLoader.js",
    "test:integration": "node testIntegration.js",
    "test:sync": "node --loader ./test/ts-esm-loader.js test/testSync.ts",
    "test:rule-sync": "node --loader ./test/ts-esm-loader.js test/testRuleSync.ts",
    "test:quick": "npm run test:core && npm run test:engine",
    "test:unit": "npm run test:core && npm run test:engine && npm run test:exporters && npm run test:token && npm run test:batch && npm run test:player-transfers",
    "test:engine-components": "npm run test:recorder && npm run test:script && npm run test:agent && npm run test:policy",
    "test:core-components": "npm run test:crypto && npm run test:random",
    "test:plugins-all": "npm run test:plugins && npm run test:plugin-loader",
    "test:network": "npm run test:sync && npm run test:rule-sync",
    "test": "npm run test:unit && npm run test:engine-components && npm run test:core-components && npm run test:plugins-all && npm run test:integration && npm run test:network",
    "test:pd": "node examples/prisoners-dilemma/testPD.js",
    "benchmark": "node --loader ./test/ts-esm-loader.js test/benchmarks.ts",
    "benchmark:memory": "node --expose-gc --loader ./test/ts-esm-loader.js test/benchmarks-memory.ts",
    "benchmark:chronicle": "node --loader ./test/ts-esm-loader.js test/benchmarkChronicle.ts",
    "benchmark:all": "npm run benchmark && npm run benchmark:memory && npm run benchmark:chronicle",
    "build:rust": "cd core-rs && ./build.sh",
    "build:rust:dev": "cd core-rs && wasm-pack build --dev --target nodejs --out-dir pkg/nodejs",
    "build:rust:release": "cd core-rs && wasm-pack build --release --target nodejs --out-dir pkg/nodejs",
    "test:rust": "cd core-rs && cargo test --lib --target $(rustc -vV | sed -n 's/host: //p')",
    "test:wasm": "node --loader ./test/ts-esm-loader.js test/testWasmBridge.ts",
    "test:wasm:stack": "node --loader ./test/ts-esm-loader.js test/testStackWasm.ts",
    "test:wasm:space": "node --loader ./test/ts-esm-loader.js test/testSpaceWasm.ts",
    "test:parallel": "node --loader ./test/ts-esm-loader.js test/testParallel.ts",
    "benchmark:parallel": "node --loader ./test/ts-esm-loader.js test/benchmarkParallel.ts",
    "profile:actions": "node --loader ./test/ts-esm-loader.js benchmark/profileActions.ts",
    "clean:rust": "cd core-rs && cargo clean && rm -rf pkg"
  }
}
